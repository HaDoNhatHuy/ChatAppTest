@{
    ViewData["Title"] = "HermesChat - Welcome";
}

<div class="hero-section position-relative">
    <!-- Animated Background Elements -->
    <div class="animated-bg">
        <div class="circles"></div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="row align-items-center min-vh-80">
            <div class="col-lg-6 c text-white">
                <h1 class="hero-title fw-bold mb-4">Connect Beyond <span class="text-gradient">Messages</span></h1>
